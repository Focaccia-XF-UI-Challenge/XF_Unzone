<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="Unzone.Content.TimeCell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ContentView.Content>
        <!--  可以把基本畫面搬出來(這是一個ContentPages內容頁面)  -->
        <Grid BackgroundColor="{StaticResource CellBackgroundColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image
                Margin="10"
                HeightRequest="50"
                HorizontalOptions="Center"
                Source="Morning.png"
                VerticalOptions="Center"
                WidthRequest="50" />

            <StackLayout Grid.Column="1" VerticalOptions="Center">
                <Label Style="{StaticResource NameLabelStyle}" Text="{Binding UserName}" />

                <StackLayout Margin="0,-5,0,0" Orientation="Horizontal">
                    <Image
                        HeightRequest="8"
                        Source="Location.png"
                        WidthRequest="8" />
                    <Label Style="{StaticResource LocationLabelStyle}" Text="{Binding Location}" />
                </StackLayout>

            </StackLayout>
            <StackLayout
                Grid.Column="2"
                Margin="0,0,20,0"
                Orientation="Horizontal">
                <Label
                    Style="{StaticResource TimeLabelStyle}"
                    Text="{Binding CurrentTime}"
                    VerticalOptions="Center" />

                <Label
                    Margin="0,-14,0,0"
                    Style="{StaticResource AmPmLabelStyle}"
                    Text="{Binding AMPM}"
                    VerticalOptions="Center" />
            </StackLayout>


            <BoxView
                Grid.Column="0"
                Grid.ColumnSpan="3"
                BackgroundColor="{StaticResource PageBackgroundColor}"
                HeightRequest="1"
                VerticalOptions="End" />
        </Grid>

    </ContentView.Content>
</ContentView>